<div class="form-container">
<%= form_with(model: @user, url: '/profile/edit_profile', method: :post) do |form| %>

<h3>Profile</h3>

<div class="profile_container">
<% if @user.image.attached? %>
<%= image_tag @user.image, alt: "profile", style: "height: 100px; width: 100px; object-fit: cover; border-radius: 50%" %>
<% else %>
<%= image_tag image_url('no_avatar.png'), alt: "profile", style: "height: 100px; width: 100px" %>
<% end %>
<%= form.file_field :image %>
</div>

<div class="wrapper-field">
<div class="field">
 <%= form.label :first_name %>
 <%= form.text_field :first_name %>
</div>
<div class="field">
 <%= form.label :last_name %>
 <%= form.text_field :last_name %>
</div>
</div>

<div class="field">
 <%= form.label :mobile %>
 <%= form.text_field :mobile %>
</div>

<div class="field">
 <%= form.label :dob %>
 <%= form.date_field :dob %>
</div>

 <%= tag.span form.submit "Update Profile", class:'submit_btn' %>

<% end %>
</div>
